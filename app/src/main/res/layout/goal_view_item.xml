<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/meta_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        tools:text="Pantalla"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/restante_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_alignParentEnd="true"
        tools:text="$ 10"
        />

    <TextView
        android:id="@+id/precio_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/meta_textView"
        tools:text="$ 40"/>

<!--    New item checkbox for delete action-->
    <ImageView
        android:id="@+id/checkbox_delete"
        android:layout_width="38dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/restante_textView"
        android:layout_marginStart="325dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="12dp"
        android:visibility="gone"
        android:layout_toEndOf="@+id/precio_textView"
        android:src="@drawable/ic_baseline_check_circle_24" />


</RelativeLayout>
